name:                bcc-wallet
version:             2021.9.29
synopsis:            Wallet backend protocol-specific bits implemented using Sophie nodes
description:         Please see README.md
homepage:            https://github.com/The-Blockchain-Company/bcc-wallet
author:              IOHK Engineering Team
maintainer:          operations@tbco.io
copyright:           2020 IOHK
license:             Apache-2.0
category:            Web
build-type:          Simple
cabal-version:       >=1.10

flag release
    description: Enable optimization and `-Werror`
    default: False
    manual: True

library
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -Wall
      -Wcompat
      -fwarn-redundant-constraints
  if (flag(release))
    ghc-options: -O2 -Werror
  build-depends:
      base
    , aeson
    , base58-bytestring
    , bech32
    , bech32-th
    , binary
    , bytestring
    , bcc-addresses
    , bcc-api
    , bcc-binary
    , bcc-crypto
    , bcc-crypto-class
    , bcc-crypto-wrapper
    , bcc-wallet-launcher
    , bcc-ledger-cole
    , bcc-ledger-core
    , bcc-ledger-sophie-ma
    , bcc-ledger-aurum
    , bcc-slotting
    , bcc-wallet-cli
    , bcc-wallet-core
    , bcc-wallet-launcher
    , bcc-wallet-test-utils
    , cborg
    , containers
    , contra-tracer
    , directory
    , extra
    , filepath
    , fmt
    , generic-lens
    , io-classes
    , tbco-monitoring
    , memory
    , network
    , network-mux
    , network-uri
    , optparse-applicative
    , shardagnostic-consensus
    , shardagnostic-consensus-cole
    , shardagnostic-consensus-bcc
    , shardagnostic-consensus-sophie
    , shardagnostic-network
    , shardagnostic-network-framework
    , random
    , retry
    , servant-server
    , sophie-spec-ledger
    , strict-containers
    , strict-non-empty-containers
    , temporary
    , text
    , text-class
    , time
    , transformers
    , typed-process
    , unliftio
    , unliftio-core
    , unordered-containers
    , vector
    , warp
    , yaml
    , Win32-network
  hs-source-dirs:
      src
  exposed-modules:
      Bcc.Wallet.Cole.Compatibility
      Bcc.Wallet.Sophie
      Bcc.Wallet.Sophie.Api.Server
      Bcc.Wallet.Sophie.Compatibility
      Bcc.Wallet.Sophie.Compatibility.Ledger
      Bcc.Wallet.Sophie.Network
      Bcc.Wallet.Sophie.Transaction
      Bcc.Wallet.Sophie.Launch
      Bcc.Wallet.Sophie.Launch.Cluster
      Bcc.Wallet.Sophie.Pools

executable bcc-wallet
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -threaded -rtsopts
      -Wall
  if (flag(release))
    ghc-options: -O2 -Werror
  build-depends:
      base
    , bcc-wallet-cli
    , bcc-wallet-core
    , bcc-wallet-launcher
    , bcc-wallet
    , contra-tracer
    , tbco-monitoring
    , lobemo-backend-ekg
    , network-uri
    , optparse-applicative
    , text
    , text-class
    , transformers
    , unliftio
  hs-source-dirs:
      exe
  main-is:
    bcc-wallet.hs

executable local-cluster
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -threaded -rtsopts
      -Wall
